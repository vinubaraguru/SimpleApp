<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.epoise.simpleapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".activity.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password">
        </activity>

        <activity
            android:name=".activity.OrganizationListActivity"
            android:label="@string/title_activity_organization_list">
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activity.InviteOppDetailActivity"
            android:label="@string/title_activity_invite_opp_detail">
        </activity>

        <activity
            android:name=".activity.HiringOppDetailActivity"
            android:label="@string/title_activity_hiring_opp_detail">
        </activity>

        <activity
            android:name=".activity.TrainingOppDetailActivity"
            android:label="@string/title_activity_training_opp_detail">
        </activity>
    </application>

</manifest>